<Window x:Class="EmployeeManager.Desktop.Views.SignInFrame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManager.Desktop.Views"
        mc:Ignorable="d"
        Title="SignInFrame" Height="641" Width="800">
    <Grid Margin="0,0,44,-3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Nom d'utilisateur" Grid.Row="0" Margin="10,0,-10,405"/>
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="10,50,-10,355"/>

        <TextBlock Text="Mot de passe" Margin="10,104,47,301"/>
        <PasswordBox x:Name="PasswordBox" Margin="10,138,-10,264"  
                      PasswordChanged="PasswordBox_PasswordChanged"/>
        <TextBlock Text="confirmer Mot de passe" Margin="10,217,47,188"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Margin="10,285,-10,117"
                      PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

        <ComboBox  Text="{Binding Role, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="53,360,0,0" VerticalAlignment="Top" Width="174" Height="53">
            <ComboBoxItem Content="admin"/>
            <ComboBoxItem Content="user"/>
        </ComboBox>

        <Button Content="Sign In"
              Command="{Binding SignInCommand}"
              Height="35" Margin="10,52,-10,-87" Grid.Row="6"/>
        
    </Grid>
</Window>

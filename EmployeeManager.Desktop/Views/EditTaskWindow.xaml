<Window x:Class="EmployeeManager.Desktop.Views.EditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier la tâche" Height="400" Width="500" WindowStartupLocation="CenterScreen">

    <Grid Margin="0,20,20,28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Titre" />
        <TextBox Grid.Row="1" Text="{Binding Task.Title}" Margin="0,5,0,10"/>

        <TextBlock Text="Description" Grid.Row="2"/>
        <TextBox Grid.Row="3" Text="{Binding Task.Description}" Height="80" AcceptsReturn="True"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,100,0,0">
            <Button Content="Annuler" Width="100" Click="Cancel_Click"/>
            <Button Content="🗑 Supprimer"
                    Command="{Binding DeleteCommand}"
                    Background="#E74C3C" Foreground="White" Width="120" Margin="0,0,10,0"/>
            <Button Content="💾 Enregistrer"
                    Command="{Binding SaveCommand}"
                    Background="#27AE60" Foreground="White" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
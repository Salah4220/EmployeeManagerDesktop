<Window x:Class="EmployeeManager.Desktop.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManager.Desktop.Views"
        mc:Ignorable="d"
        Title="DashboardView" Height="450" Width="800">
    <Grid>
        <Menu Margin="0,0,10,368">
            <MenuItem Header="Profil" Height="66" Width="119" RenderTransformOrigin="0.505,1.141" >
                <MenuItem Header="Déconnexion"/>
            </MenuItem>
            <MenuItem Header="Users" Height="66" Width="119" RenderTransformOrigin="0.505,1.141" >
                <MenuItem Header="all"/>
            </MenuItem>

        </Menu>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="🔄 Rafraîchir"
                Command="{Binding LoadTasksCommand}"
                Height="30" Width="120"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"/>

            <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Tasks}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">

                <DataGrid.Columns>
                  
                    <DataGridTextColumn Header="Titre" Binding="{Binding Title}" Width="200"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                    <DataGridTextColumn Header="UserName" Binding="{Binding UserName}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Grid>
</Window>

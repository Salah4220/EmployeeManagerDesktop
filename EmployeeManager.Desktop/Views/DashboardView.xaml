<Window x:Class="EmployeeManager.Desktop.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Administrateur" Height="600" Width="900">

    <Grid>

       
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
          
            <RowDefinition Height="*"/>
           
            <RowDefinition Height="Auto"/>
           
        </Grid.RowDefinitions>


        <Menu Grid.Row="0" Background="#2C3E50" Foreground="White" Height="30">
            <MenuItem Header="🏠 Accueil"/>
            <MenuItem Header="👤 Utilisateurs"/>
            <MenuItem Header="📋 Tâches"/>
            <MenuItem Header="🚪 Déconnexion"/>
        </Menu>

  
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Tasks}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  MouseDoubleClick="DataGrid_MouseDoubleClick"
                  Margin="10"
                  AlternatingRowBackground="#F8F8F8"
                  BorderThickness="0"
                  RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Titre" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="State" Binding="{Binding State}" Width="150"/>
                <DataGridTextColumn Header="Utilisateur" Binding="{Binding UserName}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

    
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="10">
            <Button Content="🔄 Rafraîchir"
                    Command="{Binding LoadTasksCommand}"
                    Width="120" Height="35"
                    Background="#3498DB"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="#2980B9"
                    BorderThickness="1"
                    Cursor="Hand"
                    ToolTip="Rafraîchir la liste des tâches"/>
        </StackPanel>

    </Grid>
</Window>
